{% extends "base.html.twig" %}


{% block body %}

	<div class="flex flex-col items-center">


		{{ form_start(form) }}
		<table class="text-sm text-left rtl:text-right text-gray-500">
			<div class="text-sm text-left rtl:text-right text-gray-500">
				<thead class="text-xs text-gray-400 uppercase bg-gray-700/70">
					<tr>
						<th scope="col" class="px-6 py-3 rounded-tl-md font-normal">
							Cat√©gorie
						</th>
						<th scope="col" class="px-6 py-3 font-normal">
							{{ form_label(form.description) }}
						</th>
						<th scope="col" class="px-6 py-3"></th>
						<th scope="col" class="px-6 py-3 rounded-tr-md"></th>
					</tr>
				</thead>
				<tbody>
					<tr class="bg-gray-800">
						<th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white rounded-bl-md">
							{{ form_widget(form.name, { 'attr': {'class': 'bg-gray-700 border border-gray-500 text-gray-400 text-sm rounded-md focus:border-gray-500 focus:ring-gray-500 block w-full p-2.5'} }) }}
							<div class="mt-2 text-xs text-red-600">
								{{ form_errors(form.name) }}
							</div>
						</th>


						<td class="px-6 py-4">
							{{ form_widget(form.description, { 'attr': {'class': 'bg-gray-700 border border-gray-500 text-gray-400 text-sm rounded-md focus:border-gray-500 focus:ring-gray-500 block w-full p-2.5'} }) }}
						</td>
						<td class="px-6 py-4">
							{{ form_row(form.submit, {'attr': {'class': 'inline-flex w-full justify-center gap-x-1.5 rounded-md bg-amber-700 text-amber-100 px-3 py-2 text-sm hover:bg-amber-800 font-normal'}}) }}
						</td>
						<td class="px-6 py-4 rounded-br-md">
							<a href="{{ path('recipe_category') }}" class="inline-flex w-full justify-center gap-x-1.5 rounded-md text-gray-300 bg-gray-600 hover:bg-gray-700 px-3 py-2 text-sm font-normal">Retour</a>
						</td>
					</tr>
				</tbody>
			</div>
		</table>
		{{ form_end(form) }}
	</div>

	<!-- COMPENSE HAUTEUR FOOTER-->
	<div class="bg-red-900 h-full w-full"></div>

{% endblock %}
